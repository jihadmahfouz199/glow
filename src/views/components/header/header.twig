                    <div class="inner-top-header flex justify-between items-center">

                        <div class="text-white flex">
                            <ul class="flex items-center">
                                {% if store.contacts.mobile %}
                                <li class="mr-[8px]">
                                    <a href="tel:{{ store.contacts.mobile }}" aria-label="mobile">
                                        <i class="sicon-phone"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.contacts.email %}
                                <li class="mr-[8px]">
                                    <a href="mailto:{{ store.contacts.email }}" aria-label="Email">
                                        <i class="sicon-mail"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.contacts.whatsapp %}
                                <li class="mr-[8px]">
                                    <a href="https://wa.me/{{ store.contacts.whatsapp }}" target="_blank"
                                        aria-label="Whatsapp">
                                        <i class="sicon-whatsapp"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.contacts.telegram %}
                                <li class="mr-[8px]">
                                    <a href="{{ store.contacts.telegram }}" target="_blank" aria-label="telegram">
                                        <i class="sicon-telegram"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.social.instagram %}
                                <li class="mr-[8px]">
                                    <a href="{{ store.social.instagram }}" target="_blank" aria-label="Instagram">
                                        <i class="sicon-instagram"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.social.twitter %}
                                <li class="mr-[8px]">
                                    <a href="{{ store.social.twitter }}" target="_blank" aria-label="Twitter">
                                        <i class="sicon-twitter"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.social.snapchat %}
                                <li class="mr-[8px]">
                                    <a href="{{ store.social.snapchat }}" target="_blank" aria-label="Snapchat">
                                        <i class="sicon-snapchat"></i>
                                    </a>
                                </li>
                                {% endif %}
                                {% if store.social.facebook %}
                                <li class="mr-[8px]">
                                    <a href="{{ store.social.facebook }}" target="_blank" aria-label="Facebook">
                                        <i class="sicon-facebook"></i>
                                    </a>
                                </li>
